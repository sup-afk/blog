---
interface Props {
  prevUrl: string | undefined;
  nextUrl: string | undefined;
  current: number;
  last: number;
}

const { prevUrl, nextUrl, current, last } = Astro.props;
---

<nav class="pagination-container" aria-label="Pagination">
  {
    prevUrl ? (
      <a href={prevUrl} class="nav-link">
        ← Previous
      </a>
    ) : (
      <span class="disabled">← Previous</span>
    )
  }

  <span class="page-count">
    <strong>{current}</strong> of {last}
  </span>

  {
    nextUrl ? (
      <a href={nextUrl} class="nav-link">
        Next →
      </a>
    ) : (
      <span class="disabled">Next →</span>
    )
  }
</nav>

<style>
  .pagination-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 3rem;
  }
  .nav-link {
    font-weight: 600;
    color: var(--coffee-almond);
    text-decoration: none;
  }
  .disabled {
    color: rgb(var(--gray));
    opacity: 0.5;
  }
</style>
